@page "/"

@inject IJSRuntime ijsRuntime;

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.


<script>

    function jsFuncion() {
        Alert('Prueba');
    }
    
</script>

@code{
 
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await ijsRuntime.InvokeVoidAsync("alert", "Prueba");
        }
    }
}